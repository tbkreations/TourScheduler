<div id="tourReqMain" class="main">
    <h1 class="containerTitle">Request Tour</h1>
    <a class="logoContainer" href="/">
        <img id="logoRequest" class="welcomeLogo" src="/images/tu_tiger.svg">
    </a>
    <% include ./partials/messages %>
    <form action="/tours/reqTour" method="POST" class="form">
        <div class="row">
            <div class="input-field col s12">
                <input name="reqFirstName" id="reqFirstName" type="text" class="validate" spellcheck="false">
                <label for="reqFirstName">First Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input name="reqLastName" id="reqLastName" type="text" class="validate" spellcheck="false">
                <label for="reqLastName">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input name="email" id="email" type="email" class="validate" spellcheck="false">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="XXX-XXX-XXXX" name="phone" id="phone" type="tel" class="validate">
                <label for="phone">Phone</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <select name="groupClass">
                    <option value="" disabled selected>Select One</option>
                    <option value="Prospective Student and Family">Prospective Student and Family</option>
                    <option value="Alumni">Alumni</option>
                    <option value="Transfer Student">Transfer Student</option>
                    <option value="Community Group">Community Group</option>
                    <option value="Organization">Organization</option>
                    <option value="School Group">School Group</option>
                </select>
                <label for="groupClass">Group Classification</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <select name="tourType">
                    <option value="" disabled selected>Select One</option>
                    <option value="Historical Campus Tour">Historical Campus Tour</option>
                    <option value="National Historic Site Tour (National Park Service)">National Historic Site Tour
                        (National Park Service)</option>
                    <option value="Prospective Student Tour">Prospective Student Tour</option>
                    <option value="Self-Guided Tour">Self-Guided Tour</option>
                </select>
                <label for="tourType">Tour Type</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input name="groupSize" id="groupSize" type="number" class="validate">
                <label for="groupSize">Number in Group/Family</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input name="date" id="date" type="text" class="datepicker validate">
                <label for="date">Date</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <select name="time">
                    <option value="" disabled selected>Select One</option>
                    <option value="9:00 AM">9:00 AM</option>
                    <option value="10:00 AM">10:00 AM</option>
                    <option value="11:00 AM">11:00 AM</option>
                    <option value="1:00 PM">1:00 PM</option>
                    <option value="2:00 PM">2:00 PM</option>
                    <option value="3:00 PM">3:00 PM</option>
                </select>
                <label for="time">Time</label>
            </div>
        </div>
        <button type="submit" class="navBtn" id="reqTour">Sumbit Request</button>
    </form>
</div>

